        },
        "32bit": {
            "url": "https://download-installer.cdn.mozilla.net/pub/devedition/releases/127.0b1/win32/zh-CN/Firefox%20Setup%20127.0b1.exe#/firefox-developer.7z",
            "hash": "sha512:faf18d59c3056f74af5496b52bdd925334cb5fac7626b05612fdfbd829ba688ab228b46baa0b4e9826c3110bf67c1a1e795ddf0d5cec81a333c1458a0013ac29"
