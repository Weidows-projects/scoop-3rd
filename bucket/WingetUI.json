{
    "version": "2.0.2",
    "description": "A GUI to manage Winget and Scoop packages",
    "homepage": "https://github.com/martinet101/WingetUI",
    "license": "LGPL-2.1-or-later",
    "suggest": {
        "vcredist": "extras/vcredist"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/martinet101/WingetUI/releases/download/2.0.2/WingetUI.Installer.exe",
            "hash": "0a61e70531d241f28a77ac8d5c2110ad3ec81f8f8ac50f35cfe6df4c8b14fbc2"
        }
    },
    "innosetup": true,
    "post_install": [
        "function Create-Junction { param ([string]$runtimeCache, [string]$runtimeCachePersist)",
        "  if (-not (Test-Path $runtimeCache)) { return }",
        "  if (Test-Path $runtimeCachePersist) {",
        "    Remove-Item $runtimeCache -Force -Recurse -ErrorAction SilentlyContinue",
        "    New-Item -Type Junction -Path $runtimeCache -Target $runtimeCachePersist | Out-Null",
        "  } else {",
        "    mkdir $runtimeCache -ErrorAction SilentlyContinue",
        "    Move-Item $runtimeCache $runtimeCachePersist -Force",
        "    New-Item -Type Junction -Path $runtimeCache -Target $runtimeCachePersist | Out-Null",
        "  }",
        "}",
        "foreach ($folder in @('.wingetui')) {",
        "  Create-Junction -runtimeCache \"$env:USERPROFILE\\$folder\" -runtimeCachePersist \"$persist_dir\\USERPROFILE\\$folder\"",
        "  Create-Junction -runtimeCache \"$env:LOCALAPPDATA\\$folder\" -runtimeCachePersist \"$persist_dir\\LOCALAPPDATA\\$folder\"",
        "  Create-Junction -runtimeCache \"$env:APPDATA\\$folder\" -runtimeCachePersist \"$persist_dir\\APPDATA\\$folder\"",
        "}"
    ],
    "shortcuts": [
        [
            "WingetUI.exe",
            "WingetUI"
        ]
    ],
    "bin": [
        "WingetUI.exe",
        "choco-cli\\choco.exe",
        [
            "components\\gsudo.exe",
            "sudo"
        ],
        "winget-cli\\winget.exe"
    ],
    "persist": "choco-cli\\lib",
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/martinet101/WingetUI/releases/download/$version/WingetUI.Installer.exe",
        "hash": {
            "url": "https://github.com/martinet101/WingetUI/releases/tag/$version",
            "regex": "sha256: <code>$sha256</code>"
        }
    }
}
